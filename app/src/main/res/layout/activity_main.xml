<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:alpha="0.6"
        android:background="@drawable/ca1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cafe Seek"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#3A8CB1"
        android:layout_marginTop="20dp"/>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_pro"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:background="@drawable/imagebutton"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="닉네임"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="이메일"
        android:layout_marginTop="215dp"/>


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_pro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="250dp"
        android:text="SNS Login"
        android:textColor="#FF000000"
        android:textSize="17sp" />


    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_kakaologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="30dp"
        android:paddingRight="16dp"/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="#00097287"
        android:onClick="ClickLogout"
        android:text="Logout"
        android:textColor="#FF000000"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="#00097287"
        android:text="입장"
        android:textColor="#FF000000"
        android:textSize="18sp"
        android:onClick="clickinput"/>


</RelativeLayout>